<mvc:View controllerName="asg.Assignment-1.controller.Index" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:l="sap.ui.layout">
	<App id="idAppControl">
		<pages>
			<Page id="idPage" title="{i18n>title1}" class="index" backgroundDesign="Solid">
				<content>
					<HBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
						<l:Grid defaultSpan="L4 M6 S12">
							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="TEAMS" frameType="TwoByOne" press="teams" 
							backgroundImage="./images/teamn.jpg">
								<TileContent>
									<!--<ImageContent src="https://s3.india.com/wp-content/uploads/2018/01/IPL-1.jpg"/>-->
									<NewsContent contentText="{i18n>viewTeams}"/>
								</TileContent>
							</GenericTile>
							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="PLAYERS" frameType="TwoByOne" press="players"
								backgroundImage="./images/playersn.jpg">
								<TileContent>
									<NewsContent contentText="{i18n>viewPlayers}"/>
								</TileContent>
							</GenericTile>
							<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="POINTS" frameType="TwoByOne" press="points"
								backgroundImage="./images/pointsn.jpg">
								<TileContent>
									<NewsContent contentText="{i18n>viewPoints}"/>
								</TileContent>
							</GenericTile>
						</l:Grid>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>